package conexion_multiservicios;

/**
 *
 * @author Fanner
 */
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet; // Importa la clase ResultSet correcta
import java.sql.SQLException;
import java.sql.Statement;
import java.util.logging.Level;
import java.util.logging.Logger;

public class Conexion_multiservicios {

    public static void main(String[] args) {
        String usuario = "root";
        String password = "";
        String url = "jdbc:mysql://localhost:3306/multiservicios";
        Connection conexion = null;
        Statement statement = null;
        ResultSet rs = null; // Utiliza la clase ResultSet correcta

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(Conexion_multiservicios.class.getName()).log(Level.SEVERE, null, ex);
        }

        try {
            conexion = DriverManager.getConnection(url, usuario, password);
            statement = conexion.createStatement();

            // Insertar un nuevo cliente
            String insertQuery = "INSERT INTO cliente (Nombre, Tel√©fono, Correo) VALUES (?, ?, ?)";
            PreparedStatement preparedStatement = conexion.prepareStatement(insertQuery);
            preparedStatement.setString(1, "JORGE GONZALEZ");
            preparedStatement.setString(2, "31256897");
            preparedStatement.setString(3, "correo@example.com");
            preparedStatement.executeUpdate();

            // Consulta para obtener todos los clientes
            String selectQuery = "SELECT * FROM cliente";
            rs = statement.executeQuery(selectQuery);

            while (rs.next()) {
                int idCliente = rs.getInt("IDcliente");
                String nombre = rs.getString("Nombre");
                System.out.println(idCliente + " : " + nombre);
            }

        } catch (SQLException ex) {
            Logger.getLogger(Conexion_multiservicios.class.getName()).log(Level.SEVERE, null, ex);
        } finally {
            try {
                if (rs != null) {
                    rs.close();
                }
                if (statement != null) {
                    statement.close();
                }
                if (conexion != null) {
                    conexion.close();
                }
            } catch (SQLException e) {
                Logger.getLogger(Conexion_multiservicios.class.getName()).log(Level.SEVERE, null, e);
            }
        }
    }
}
